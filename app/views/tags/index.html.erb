<h2>タグ一覧</h2>
<table>
  <thead>
    <tr>
      <th>No.</th>
      <th>name</th>
    </tr>
  </thead>
  <tbody>
    <% @tags.each_with_index do |tag, index| %>
      <tr>
        <td><%= index +1 %></td>
        <td><%= tag.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Return to Posts', posts_path %>