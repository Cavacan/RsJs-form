<%= form_with model: @user, url: create_user_home_index_path, local: true do |form| %>
  <div>
    <%= form.label :name, "Name" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :age, "Age" %>
    <%= form.number_field :age %>
  </div>

  <div>
    <%= form.submit "Create User" %>
  </div>
<% end %>

<% if @user.errors.any? %>
  <h2>Errors:</h2>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>